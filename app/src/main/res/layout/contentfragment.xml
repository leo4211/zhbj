<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <test.liuyang.com.zhbj.base.MyViewPager
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/mviewpager"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f00"
            ></LinearLayout>

    </test.liuyang.com.zhbj.base.MyViewPager>
    <RadioGroup
        android:id="@+id/rgb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_tab_bg"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <RadioButton

            android:id="@+id/rb_home"
            android:textColor="@color/text_tab_color"
            android:text="首页"
            style="@style/Bottom_tab_Theme"
            android:drawableTop="@drawable/shouye_tab_selector"
            android:checked="false" />
        <RadioButton

            android:id="@+id/news"
            android:textColor="@color/text_tab_color"
            android:text="新闻中心"
            style="@style/Bottom_tab_Theme"
            android:drawableTop="@drawable/newsservice_tab_selector"
            />
        <RadioButton

            android:id="@+id/smart_service"
            android:textColor="@color/text_tab_color"
            android:text="智慧服务"
            style="@style/Bottom_tab_Theme"
            android:drawableTop="@drawable/smartservice_tab_selector"
            android:checked="false" />
        <RadioButton

            android:id="@+id/zhengwu"
            android:textColor="@color/text_tab_color"
            android:text="政务"
            style="@style/Bottom_tab_Theme"
            android:drawableTop="@drawable/goverios_tab_selector"
            android:checked="false" />
        <RadioButton

            android:id="@+id/setting"
            android:textColor="@color/text_tab_color"
            android:text="设置"
            style="@style/Bottom_tab_Theme"
            android:drawableTop="@drawable/settings_tab_selector"
            />

    </RadioGroup>

</LinearLayout>
